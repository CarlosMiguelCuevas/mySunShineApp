
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detalle.DetailFragment"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_date_day_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="24sp"
            style="@style/commonStyleText"
            />
        <TextView
            android:id="@+id/detail_date_month_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jume 18"
            style="@style/commonStyleText_gray"
            android:textSize="16sp"
            />


        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            <LinearLayout android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="16dp">
                <TextView
                    android:id="@+id/detail_high_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:fontFamily="sans-serif-light"
                    style="@style/commonStyleText"
                    android:textSize="96sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/detal_low_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    style="@style/commonStyleText_gray"
                    android:textSize="48sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="32dp"/>
            </LinearLayout>
            <LinearLayout android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/detail_icon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/art_clear"
                    />

                <TextView
                    android:id="@+id/detail_forecast_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/commonStyleText_gray"
                    android:textSize="22sp"
                    android:text="clear"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/detail_humidity_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="humidity"
            style="@style/extraInfo_detail"

            />
        <TextView
            android:id="@+id/detail_wind_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pressure"
            style="@style/extraInfo_detail"
            />
        <TextView
            android:id="@+id/detail_pressure_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wind"
            style="@style/extraInfo_detail"
            />
    </LinearLayout>
</ScrollView>

